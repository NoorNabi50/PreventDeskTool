
@{ 
    Layout = null;
}
@model IEnumerable<PreventDeskTool.Models.Users>



<div class="card card-primary card-outline">
  
    <div class="card-header container-fluid">
  <div class="row">
    <div class="col-md-10">
      <h3>Users</h3>
    </div>
    <div class="col-md-2 float-right">
       <a href="#" class="Rendercomponent btn btn-primary ml-10" endpoint="/User/GetUser">New</a>
     </div>
  </div>
</div>

    <div class="card-body">
         <div class="table-responsive">
        <table id="datatable" class="table table-sm table-bordered table-striped">
            <thead class="bg-blue">
                <tr>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (PreventDeskTool.Models.Users users in Model)
                {
                    <tr>
                        <td>@users.UserName</td>
                        <td>@users.Password</td>
                        <td>@users.Role</td>
                        <td><a href="#" class="btn btn-info Rendercomponent" endpoint="/User/GetUser?id=@users.UserId">Edit</a>
                            <a href="#" id="@users.UserId" endpoint="/User/DeleteUser" redirecturlpoint="/User/Index" class="btn btn-danger Deletebtn">Delete</a> 
                             <a href="#" data-username= "@users.UserName" id="@users.UserId" endpoint="/Chat/GetChatsByUserId" class="btn btn-success OpenChat">Chat</a> 
                       
                        </td>
               
                    </tr>
                }


            </tbody>
        </table>

    </div>
    </div>
    </div>

